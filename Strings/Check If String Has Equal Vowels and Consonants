#include <stdio.h>
#include <string.h>

int main() {
    char str1[100];
    char vow[]={'a','e','i','o','u','\0'};
    int i,vowels=0,cons=0,length;
    printf("Enter string ");
    scanf("%s",str1);
    length = strlen(str1);
    for(i=0;i<length;i++){//abce
        int m=0;

        for(int j=0;j<strlen(vow);j++){//aeiou 
            if(str1[i]==vow[j])
            { vowels++;
                m=1;
            }
        }
        if(m==0){
            cons++;
        }
    }
   printf("%d vowels and %d consonants ",vowels,cons);
    return 0;
}
