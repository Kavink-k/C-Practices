#include <stdio.h>
#include <string.h>
int isPalindrome(char str[]){
    int palindrome=1;
    int Length=strlen(str);
    int start=0;
    int end=Length-1;
    while(start<end){
        if(str[start]!=str[end]) palindrome=0;  break;
        start++;
        end--;
        
    }return palindrome;
}
int main() {
    char str1[100][100],highestring[100];
    int i,strcount;
    printf("enter string count ");
    scanf("%d",&strcount);
    for(i=0;i<strcount;i++){
        char str2[100];
        scanf("%s",str2);
        strcpy(str1[i],str2);
    }
    int l,clen=0;
    for(i=0;i<strcount;i++){
        if(isPalindrome(str1[i])){
            l=strlen(str1[i]);
            if(l>clen){
                clen=l;
                strcpy(highestring,str1[i]);}else break;}
}
printf("%s is longest with %d",highestring,clen);
    return 0;
}
